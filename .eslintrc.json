{
  "plugins": [
    "standard",
    "promise",
    "mocha",
    "json"
  ],
  "parser": "babel-eslint",
  "extends": [
    "standard"
  ],
  "environment": [
    "node",
    "mocha"
  ],
  "env": {
    "mocha": "mocha"
  },
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "semi": 0,
    "no-extra-semi": 0,
    "indent": [
      "error",
      4
    ],
    "no-unused-vars": 0,
    "space-before-function-paren": 0,
    "keyword-spacing": 0,
    "handle-callback-err": 0,
    "no-useless-escape": 0,
    "no-cond-assign": 0,
    "no-control-regex": 0
  }
}
